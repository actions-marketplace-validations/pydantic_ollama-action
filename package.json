{
  "name": "ollama-action",
  "description": "GitHub Action to run ollama",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "homepage": "https://github.com/samuelcolvin/ollama-action",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "package": "ncc build src/index.ts -o dist"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "node-fetch": "^3.3.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 119,
    "bracketSpacing": true
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/parser": "^8.17.0",
    "@vercel/ncc": "^0.38.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
